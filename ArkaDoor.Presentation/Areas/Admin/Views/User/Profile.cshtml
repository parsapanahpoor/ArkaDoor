@using ArkaDoor.Application.Convertors;
@using ArkaDoor.Domain.Entities.Users;
@using ArkaDoor.Application.Utilities.Extensions;
@model User

@{
    ViewData["Title"] = "کاربر" + " " + Model.Username;
}

@section breadcrumbs
    {
    <li>
        <a asp-controller="User" asp-action="Index">کاربر</a>
    </li>
    <li class="active">@ViewData["Title"]</li>
}

<div class="container-fluid">
    <div class="row">

        <div class="col-12 col-xl-3 col-lg-3">

            <div class="databox databox-xlg databox-halved databox-shadowed databox-vertical no-margin-bottom">
                <div class="databox-top bg-white padding-10">
                    <div class="col-lg-4 col-sm-4 col-xs-4">
                        <img src="@Model.GetUserAvatar()" style="width: 75px; height: 75px;" class="image-circular bordered-3 bordered-palegreen">
                    </div>
                    <div class="col-lg-8 col-sm-8 col-xs-8 text-align-left padding-10">
                        <span class="databox-header carbon no-margin"> @Model.Username </span>
                        <span class="databox-text lightcarbon no-margin"> @Model.Mobile </span>
                        @if (!string.IsNullOrEmpty(Model.Mobile))
                        {
                            <span class="databox-text lightcarbon no-margin"> @Model.Mobile </span>
                        }

                    </div>
                </div>

                <div class="databox-bottom bg-white no-padding ">
                    <div class="databox-row row-12">
                        <div class="databox-row row-6 no-padding">
                            <div class="databox-cell cell-6 no-padding text-align-center bordered-right bordered-platinum">
                                <span class="databox-text sonic-silver no-margin"> شارژ حساب کاربری </span>
                                <span class="databox-number lightcarbon no-margin "> @Model.WalletBalance.ToString("#,000") ریال </span>

                            </div>
                            <div class="databox-cell cell-6 no-padding text-align-center">
                                <span class="databox-text sonic-silver no-margin"> تاریخ ثبت نام </span>
                                <span class="databox-number lightcarbon no-margin"> @Model.CreateDate.ToShamsi() </span>
                            </div>
                        </div>
                    </div>
                </div>

            </div>

            <div class="widget margin-top-10">
                <div class="widget-header">
                    <span class="widget-caption">امکانات</span>
                </div>
                <div class="widget-body">
                    <p>
                    </p>

                </div>
            </div>
        </div>

        <div class="col-xs-12 col-md-12 col-lg-9">
        </div>
    </div>
</div>

